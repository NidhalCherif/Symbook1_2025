{% extends 'base.html.twig' %}

{% block title %}Hello LivresController!{% endblock %}

{% block body %}
    <h1>Liste des Livres</h1>
    <table class="table">
        <th>Titre</th>
        <th>Editeur</th>
        <th>Date Edition</th>
        <th>Prix</th>
        <th>Categorie</th>
        <th colspan="3">Action</th>
        {% for livre in livres  %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.editeur }}</td>
                <td>{{ livre.dateEdition|date('d-m-Y') }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.categorie.libelle }}</td>
                <td><a href="{{ path('app_livres_show',{'id':livre.id}) }}">Voir d√©tail...</a></td>
                <td><a href="{{ path('app_livres_delete',{'id':livre.id}) }}">Supprimer</a></td>
                <td><a href="{{ path('app_livres_update',{'id':livre.id}) }}">Editer</a></td>
            </tr>

        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(livres) }}
    </div>

{% endblock %}
